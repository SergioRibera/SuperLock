{
    "package": {
        "productName": "superlock",
        "version": "0.1.0"
    },
    "build": {
        "distDir": "../build",
        "devPath": "http://localhost:3000",
        "beforeDevCommand": "yarn start",
        "beforeBuildCommand": "yarn build"
    },
    "tauri": {
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.tauri.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "resources": [],
            "externalBin": [],
            "copyright": "",
            "category": "Customization",
            "shortDescription": "",
            "longDescription": ""
        },
        "updater": {
            "active": false
        },
        "allowlist": {
            "all": true
        },
        "windows": [
            {
                "title": "SuperLock",
                "resizable": false,
                "fullscreen": true,
                "decorations": false,
                "allwaysOnTop": true
            }
        ],
        "security": {
            "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
        }
    }
}
